include: perl/parse.def
fncode: parse_tex($str)
    my @stack
    my ($cur_stage, $cur_list)
    $cur_stage="text"
    $cur_list=[]
    &call parse_loop, $str
        $if_lex \{
            push @stack, [$cur_stage, $cur_list]
            $cur_list=[]
        $if_lex \}
            my $t=pop @stack
            push @{$t->[1]}, $cur_list
            ($cur_stage, $cur_list)=@$t
        $if_lex ([_\^])
            push @$cur_list, $1
        $if_lex (\\[a-zA-Z]+)
            push @$cur_list, $1
        $if_lex (\\[^a-zA-Z])
            push @$cur_list, $1




