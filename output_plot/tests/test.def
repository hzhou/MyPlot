    $call fig_1

subcode: fig_1
    #-- 9 trees
    $set_point i=0:4, j=0:4, u=100
        zij=(i*u,j*u)
    $group origin (200, 300)
        $line 10pt, gray
        $(for:i in 0,1,2)
            $(for:j in 0,1,2)
                $draw z$(i)$(j)
        $line 2, black
        # $draw (2u,2u)--(0,0)--(0,3u)--(3u,0)--(0,0)
        $draw z22--z00--z03--z30--z00

subcode: fig_2
    $group origin(300,200)
        $draw $(circle:100)
    $group origin(200,350)
        $draw $(square:100)

subcode: fig_3
    $set_point
        z0=(0,0)
        z1=(60,40)
        z2=(40,90)
        z3=(10,70)
        z4=(30,50)

    $group origin (100, 200)
        $draw z0..z1..z2..z3..z4
    $group origin (200, 200)
        $draw z0..z1..z2..z3..z4..cycle
    $group origin (300, 200)
        $draw z0..z1..z2..z3--z4--cycle

    $group origin (100, 350)
        $draw z0..z1{up}..z2{left}..z3..z4

subcode: fig_4
    $group origin(100, 100)
        $for $a=0:91:10
            $draw (0,0){dir 45}..{dir -$a}(300,0)
    $group origin(100, 300)
        $for $a=0:91:10
            $draw (0,0){dir 45}..{dir $a}(300,0)

    $group origin(100,500)
        $draw (0,0){up}..(200,40){right}..(400,0){down}
    $group origin(100,600)
        $draw (0,0){up}...(200,40){right}...(400,0){down}

subcode: fig_5
    $set_point a=100, b=60
        z0=(0,0)
        z1=(a,0)
        z2=(0,b)
        z3=-z1
        z4=-z2
    $group origin(300,100)
        $draw z1..z2..z3..z4..cycle
        $draw z1--z0--z2
        $label z0
        $label [z0,z1]: "a"
        $label [z0,z2]: "b"

subcode: fig_6
    $set_point a=100
        z0=(0,0)
        z1=(-a,0)
        z2=(a,0)
        z3=1/2[z0,z1]
        z4=1/2[z0,z2]

    $group origin(300, 300), a=100
        $draw $(circle:a)
        $fill z1..arc(-180,0)..z0..arc(180,0)..z2..arc(0,-180)..z1
        $group origin(z3)
            $fill $(circle:10)
        $group origin(z4), fill white
            $fill $(circle:10)

